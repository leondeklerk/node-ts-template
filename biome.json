{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!**/dist", "!**/.husky", "!**/.vscode", "!**/node_modules"]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 150
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
