{
	"name": "node-ts-template",
	"version": "1.0.0",
	"description": "Node typescript template",
	"main": "index.ts",
	"scripts": {
		"lint": "eslint --ext .ts,.js,.json --ignore-path .gitignore .",
		"dev": "tsc-watch --noClear -p tsconfig.json --onSuccess \"node dist/index.js\"",
		"build": "run-p type-check build-only",
		"type-check": "tsc --noEmit",
		"start": "node dist/index.js",
		"prepare": "node ./scripts/prepare.js",
		"build-only": "tsc"
	},
	"keywords": [],
	"author": "Leon de Klerk",
	"license": "MIT",
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --ext .ts,.js --max-warnings 0"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/leondeklerk/node-ts-template"
	},
	"dependencies": {},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "5.48.0",
		"@typescript-eslint/parser": "5.48.0",
		"eslint": "8.31.0",
		"eslint-config-prettier": "8.6.0",
		"husky": "8.0.3",
		"lint-staged": "13.1.0",
		"npm-run-all": "4.1.5",
		"prettier": "2.8.1",
		"tsc-watch": "6.0.0",
		"typescript": "4.9.4"
	}
}
