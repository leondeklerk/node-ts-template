{
	"name": "node-ts-template",
	"version": "1.0.0",
	"description": "Node typescript template",
	"main": "index.ts",
	"scripts": {
		"lint": "eslint --ext .ts,.js,.json --ignore-path .gitignore .",
		"dev": "tsx watch src/index.ts",
		"build": "npm run type-check && npm run build-only",
		"type-check": "tsc --noEmit",
		"start": "node dist/index.js",
		"prepare": "node ./scripts/prepare.js",
		"build-only": "tsc"
	},
	"keywords": [],
	"author": "Leon de Klerk",
	"license": "MIT",
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --ext .ts,.js --max-warnings 0"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/leondeklerk/node-ts-template"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "6.21.0",
		"@typescript-eslint/parser": "6.21.0",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"husky": "8.0.3",
		"lint-staged": "15.2.2",
		"prettier": "3.2.5",
		"tsx": "4.7.1",
		"typescript": "5.3.3"
	}
}
